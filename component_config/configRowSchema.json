{
  "type": "object",
  "title": "Embeddings Row Configuration",
  "required": [
    "text_column",
    "embedding_settings"
  ],
  "properties": {
    "text_column": {
      "type": "string",
      "title": "Text Column",
      "description": "Select the column containing text to embed",
      "propertyOrder": 1,
      "watch": {
        "columns": "_metadata_.table.columns"
      }
    },
    "embedding_settings": {
      "type": "object",
      "title": "Embedding Settings",
      "propertyOrder": 200,
      "required": ["provider_type"],
      "properties": {
        "provider_type": {
          "type": "string",
          "title": "Embedding Provider",
          "description": "Select the embedding service to use",
          "enum": [
            "openai",
            "azure_openai",
            "cohere",
            "huggingface_hub",
            "google_vertex",
            "bedrock"
          ],
          "enumNames": [
            "OpenAI",
            "Azure OpenAI",
            "Cohere",
            "HuggingFace Hub",
            "Google Vertex AI",
            "AWS Bedrock"
          ],
          "options": {
            "tooltip": "Choose the AI service that will generate embeddings"
          }
        },
        "openai_settings": {
          "type": "object",
          "title": "OpenAI Settings",
          "required": ["model", "#api_key"],
          "options": {
            "dependencies": {
              "provider_type": "openai"
            }
          },
          "properties": {
            "model": {
              "type": "string",
              "title": "Model",
              "description": "Select the OpenAI embedding model",
              "enum": [
                "text-embedding-3-small",
                "text-embedding-3-large",
                "text-embedding-ada-002"
              ],
              "default": "text-embedding-3-small",
              "options": {
                "tooltip": "text-embedding-3-small is recommended for most use cases"
              }
            },
            "#api_key": {
              "type": "string",
              "title": "API Key",
              "format": "password"
            }
          }
        },
        "azure_settings": {
          "type": "object",
          "title": "Azure OpenAI Settings",
          "required": ["deployment_name", "#api_key", "azure_endpoint"],
          "options": {
            "dependencies": {
              "provider_type": "azure_openai"
            }
          },
          "properties": {
            "deployment_name": {
              "type": "string",
              "title": "Deployment Name",
              "description": "Enter your Azure OpenAI deployment name"
            },
            "#api_key": {
              "type": "string",
              "title": "API Key",
              "format": "password"
            },
            "azure_endpoint": {
              "type": "string",
              "title": "Azure Endpoint",
              "description": "Your Azure OpenAI endpoint URL",
              "options": {
                "inputAttributes": {
                  "placeholder": "https://<your-endpoint>.openai.azure.com/"
                }
              }
            },
            "api_version": {
              "type": "string",
              "title": "API Version",
              "default": "2024-02-01"
            }
          }
        },
        "cohere_settings": {
          "type": "object",
          "title": "Cohere Settings",
          "required": ["model", "#api_key"],
          "options": {
            "dependencies": {
              "provider_type": "cohere"
            }
          },
          "properties": {
            "model": {
              "type": "string",
              "title": "Model",
              "description": "Select the Cohere embedding model",
              "enum": [
                "embed-english-v3.0",
                "embed-english-light-v3.0",
                "embed-multilingual-v3.0",
                "embed-multilingual-light-v3.0"
              ],
              "default": "embed-english-v3.0",
              "options": {
                "tooltip": "Light models are faster but less accurate"
              }
            },
            "#api_key": {
              "type": "string",
              "title": "API Key",
              "format": "password"
            }
          }
        },
        "huggingface_settings": {
          "type": "object",
          "title": "HuggingFace Hub Settings",
          "required": ["model", "#api_key"],
          "options": {
            "dependencies": {
              "provider_type": "huggingface_hub"
            }
          },
          "properties": {
            "model": {
              "type": "string",
              "title": "Model Name",
              "description": "Enter the HuggingFace model name",
              "default": "sentence-transformers/all-mpnet-base-v2",
              "options": {
                "inputAttributes": {
                  "placeholder": "sentence-transformers/all-mpnet-base-v2"
                },
                "tooltip": "Recommended models: all-mpnet-base-v2, all-MiniLM-L6-v2, bge-large-en-v1.5"
              }
            },
            "#api_key": {
              "type": "string",
              "title": "API Key",
              "format": "password"
            },
            "normalize_embeddings": {
              "type": "boolean",
              "title": "Normalize Embeddings",
              "description": "Whether to normalize the computed embeddings to unit length",
              "default": true
            },
            "show_progress": {
              "type": "boolean",
              "title": "Show Progress",
              "description": "Whether to show a progress bar during embedding generation",
              "default": false
            }
          }
        },
        "google_vertex_settings": {
          "type": "object",
          "title": "Google Vertex AI Settings",
          "required": ["#credentials", "project"],
          "options": {
            "dependencies": {
              "provider_type": "google_vertex"
            }
          },
          "properties": {
            "#credentials": {
              "type": "string",
              "title": "Service Account JSON",
              "description": "Google Cloud service account credentials JSON",
              "format": "password"
            },
            "project": {
              "type": "string",
              "title": "Project ID",
              "description": "Google Cloud project ID"
            },
            "location": {
              "type": "string",
              "title": "Location",
              "description": "Google Cloud region",
              "default": "us-central1"
            },
            "model_name": {
              "type": "string",
              "title": "Model Name",
              "description": "Vertex AI model name",
              "default": "textembedding-gecko@latest"
            }
          }
        },
        "bedrock_settings": {
          "type": "object",
          "title": "AWS Bedrock Settings",
          "required": ["#aws_access_key", "#aws_secret_key", "region", "model_id"],
          "options": {
            "dependencies": {
              "provider_type": "bedrock"
            }
          },
          "properties": {
            "#aws_access_key": {
              "type": "string",
              "title": "AWS Access Key",
              "format": "password"
            },
            "#aws_secret_key": {
              "type": "string",
              "title": "AWS Secret Key",
              "format": "password"
            },
            "region": {
              "type": "string",
              "title": "AWS Region",
              "description": "AWS region where Bedrock is available",
              "enum": [
                "us-east-1",
                "us-west-2",
                "ap-southeast-1",
                "ap-northeast-1",
                "eu-central-1"
              ]
            },
            "model_id": {
              "type": "string",
              "title": "Model ID",
              "description": "Bedrock model identifier",
              "enum": [
                "amazon.titan-embed-text-v1",
                "amazon.titan-embed-g1-text-02",
                "cohere.embed-english-v3",
                "cohere.embed-multilingual-v3"
              ],
              "default": "amazon.titan-embed-text-v1"
            }
          }
        }
      }
    },
    "output_config": {
      "type": "object",
      "title": "Output Configuration",
      "propertyOrder": 300,
      "required": ["output_type"],
      "properties": {
        "output_type": {
          "type": "string",
          "title": "Output Type",
          "description": "Select how to save the embeddings",
          "enum": ["csv", "raw"],
          "enumNames": ["CSV Table", "Raw Embeddings File"],
          "default": "csv",
          "options": {
            "tooltip": "CSV is recommended for most use cases"
          }
        },
        "save_to_vectordb": {
          "type": "boolean",
          "title": "Save to Vector Database",
          "description": "Store embeddings in a vector database",
          "default": false
        }
      }
    },
    "vector_db": {
      "type": "object",
      "title": "Vector Database Configuration",
      "propertyOrder": 400,
      "required": ["db_type"],
      "options": {
        "dependencies": {
          "output_config": {
            "save_to_vectordb": true
          }
        }
      },
      "properties": {
        "db_type": {
          "type": "string",
          "title": "Database Type",
          "description": "Select the vector database type",
          "enum": [
            "pgvector",
            "pinecone",
            "qdrant",
            "milvus",
            "redis",
            "opensearch"
          ],
          "enumNames": [
            "PostgreSQL (pgvector)",
            "Pinecone",
            "Qdrant",
            "Milvus",
            "Redis",
            "OpenSearch"
          ],
          "options": {
            "tooltip": "Choose where to store your embeddings"
          }
        },
        "pgvector_settings": {
          "type": "object",
          "title": "PostgreSQL Settings",
          "required": ["host", "port", "database", "#username", "#password", "table_name"],
          "options": {
            "dependencies": {
              "db_type": "pgvector"
            }
          },
          "properties": {
            "host": {
              "type": "string",
              "title": "Host",
              "description": "PostgreSQL server hostname"
            },
            "port": {
              "type": "integer",
              "title": "Port",
              "default": 5432
            },
            "database": {
              "type": "string",
              "title": "Database",
              "description": "Database name"
            },
            "#username": {
              "type": "string",
              "title": "Username",
              "format": "password"
            },
            "#password": {
              "type": "string",
              "title": "Password",
              "format": "password"
            },
            "table_name": {
              "type": "string",
              "title": "Table Name",
              "default": "embeddings"
            }
          }
        },
        "pinecone_settings": {
          "type": "object",
          "title": "Pinecone Settings",
          "required": ["#api_key", "environment", "index_name"],
          "options": {
            "dependencies": {
              "db_type": "pinecone"
            }
          },
          "properties": {
            "#api_key": {
              "type": "string",
              "title": "API Key",
              "format": "password"
            },
            "environment": {
              "type": "string",
              "title": "Environment",
              "description": "Pinecone environment name"
            },
            "index_name": {
              "type": "string",
              "title": "Index Name"
            }
          }
        },
        "qdrant_settings": {
          "type": "object",
          "title": "Qdrant Settings",
          "required": ["url", "#api_key"],
          "options": {
            "dependencies": {
              "db_type": "qdrant"
            }
          },
          "properties": {
            "url": {
              "type": "string",
              "title": "URL",
              "description": "Qdrant instance URL"
            },
            "#api_key": {
              "type": "string",
              "title": "API Key",
              "format": "password"
            }
          }
        },
        "milvus_settings": {
          "type": "object",
          "title": "Milvus Settings",
          "required": ["host", "port", "#username", "#password"],
          "options": {
            "dependencies": {
              "db_type": "milvus"
            }
          },
          "properties": {
            "host": {
              "type": "string",
              "title": "Host",
              "description": "Milvus server hostname"
            },
            "port": {
              "type": "integer",
              "title": "Port",
              "default": 19530
            },
            "#username": {
              "type": "string",
              "title": "Username",
              "format": "password"
            },
            "#password": {
              "type": "string",
              "title": "Password",
              "format": "password"
            }
          }
        },
        "redis_settings": {
          "type": "object",
          "title": "Redis Settings",
          "required": ["host", "port", "#password"],
          "options": {
            "dependencies": {
              "db_type": "redis"
            }
          },
          "properties": {
            "host": {
              "type": "string",
              "title": "Host",
              "description": "Redis server hostname"
            },
            "port": {
              "type": "integer",
              "title": "Port",
              "default": 6379
            },
            "#password": {
              "type": "string",
              "title": "Password",
              "format": "password"
            }
          }
        },
        "opensearch_settings": {
          "type": "object",
          "title": "OpenSearch Settings",
          "required": ["host", "port", "#username", "#password", "index_name"],
          "options": {
            "dependencies": {
              "db_type": "opensearch"
            }
          },
          "properties": {
            "host": {
              "type": "string",
              "title": "Host",
              "description": "OpenSearch server hostname"
            },
            "port": {
              "type": "integer",
              "title": "Port",
              "default": 9200
            },
            "#username": {
              "type": "string",
              "title": "Username",
              "format": "password"
            },
            "#password": {
              "type": "string",
              "title": "Password",
              "format": "password"
            },
            "index_name": {
              "type": "string",
              "title": "Index Name",
              "default": "embeddings"
            }
          }
        }
      }
    },
    "advanced_options": {
      "type": "object",
      "title": "Advanced Options",
      "propertyOrder": 500,
      "properties": {
        "batch_size": {
          "type": "integer",
          "title": "Batch Size",
          "description": "Number of texts to process in one batch",
          "default": 100,
          "minimum": 1,
          "maximum": 1000,
          "propertyOrder": 1
        },
        "enable_chunking": {
          "type": "boolean",
          "title": "Enable Text Chunking",
          "description": "Split long texts into smaller chunks before embedding",
          "default": false,
          "propertyOrder": 2
        },
        "chunking_settings": {
          "type": "object",
          "title": "Chunking Settings",
          "propertyOrder": 3,
          "options": {
            "dependencies": {
              "enable_chunking": true
            }
          },
          "properties": {
            "chunk_size": {
              "type": "integer",
              "title": "Chunk Size",
              "description": "Maximum number of characters in each chunk",
              "default": 1000,
              "minimum": 100,
              "maximum": 8000
            },
            "chunk_overlap": {
              "type": "integer",
              "title": "Chunk Overlap",
              "description": "Number of characters to overlap between chunks",
              "default": 100,
              "minimum": 0,
              "maximum": 1000
            },
            "chunk_strategy": {
              "type": "string",
              "title": "Chunking Strategy",
              "description": "How to split the text into chunks",
              "enum": ["character", "sentence", "word", "paragraph"],
              "default": "paragraph",
              "options": {
                "tooltip": "Paragraph is recommended for most use cases"
              }
            }
          }
        }
      }
    }
  },
  "actions": {
    "testConnection": {
      "type": "button",
      "format": "test-connection",
      "label": "Test Vector DB Connection"
    }
  }
}