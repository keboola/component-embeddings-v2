{
    "type": "object",
    "title": "Embeddings Row Configuration",
    "required": [
        "text_column"
    ],
    "properties": {
        "text_column": {
            "type": "string",
            "title": "Embed column name",
            "watch": {
                "columns": "_metadata_.table.columns"
            },
            "required": true,
            "enumSource": "columns",
            "description": "Choose a column to embed data.",
            "propertyOrder": 1
        },
        "metadata_column": {
            "type": "string",
            "title": "Embed Metadata column name",
            "watch": {
                "columns": "_metadata_.table.columns"
            },
            "required": false,
            "enumSource": "columns",
            "description": "Choose a column to save to the vector store database as metadata.",
            "propertyOrder": 1
        },
        "output_config": {
            "type": "object",
            "title": "Output Configuration",
            "propertyOrder": 300,
            "properties": {
                "save_to_storage": {
                    "type": "boolean",
                    "title": "Save to Storage",
                    "format": "checkbox",
                    "description": "Save Embeddings to Storage also",
                    "default": false
                },
                "save_to_vectordb": {
                    "type": "boolean",
                    "format": "checkbox",
                    "title": "Save to Vector Database",
                    "description": "Store embeddings in a vector database",
                    "default": true
                }
            }
        },
        "destination": {
            "title": "Destination",
            "type": "object",
            "propertyOrder": 350,
            "required": [
                "output_table_name",
                "incremental_load",
                "primary_keys_array"
            ],
            "options": {
                "dependencies": {
                    "output_config": {
                        "save_to_storage": true
                    }
                }
            },
            "properties": {
                "output_table_name": {
                    "type": "string",
                    "title": "Storage Table Name",
                    "description": "Name of the table stored in Storage.",
                    "propertyOrder": 100
                },
                "incremental_load": {
                    "type": "boolean",
                    "format": "checkbox",
                    "title": "Incremental Load",
                    "description": "If incremental load is turned on, the table will be updated instead of rewritten. Tables with a primary key will have rows updated, tables without a primary key will have rows appended.",
                    "propertyOrder": 110
                },
                "primary_keys_array": {
                    "type": "array",
                    "title": "Primary Keys",
                    "format": "select",
                    "items": {
                        "type": "string"
                    },
                    "uniqueItems": true,
                    "options": {
                        "tags": true
                    },
                    "description": "You can enter multiple columns seperated by commas at once e.g., id, other_id. If a primary key is set, updates can be done on the table by selecting incremental loads. The primary key can consist of multiple columns. The primary key of an existing table cannot be changed.",
                    "propertyOrder": 120
                }
            }
        },
        "vector_db": {
            "type": "object",
            "title": "Vector Database Destination Configuration",
            "propertyOrder": 400,
            "required": [
                "db_type"
            ],
            "options": {
                "dependencies": {
                    "output_config": {
                        "save_to_vectordb": true
                    }
                }
            },
            "properties": {
                "db_type": {
                    "type": "string",
                    "title": "Database Type",
                    "description": "Select the vector database type",
                    "enum": [
                        "pgvector",
                        "pinecone",
                        "qdrant",
                        "milvus",
                        "redis",
                        "opensearch"
                    ],
                    "enumNames": [
                        "PostgreSQL (pgvector)",
                        "Pinecone",
                        "Qdrant",
                        "Milvus",
                        "Redis",
                        "OpenSearch"
                    ],
                    "options": {
                        "tooltip": "Choose where to store your embeddings"
                    }
                },
                "pgvector_settings": {
                    "type": "object",
                    "title": "PostgreSQL Settings",
                    "required": [
                        "host",
                        "port",
                        "database",
                        "#username",
                        "#password",
                        "collection_name"
                    ],
                    "options": {
                        "dependencies": {
                            "db_type": "pgvector"
                        }
                    },
                    "properties": {
                        "host": {
                            "type": "string",
                            "title": "Host",
                            "description": "PostgreSQL server hostname"
                        },
                        "port": {
                            "type": "integer",
                            "title": "Port",
                            "default": 5432
                        },
                        "database": {
                            "type": "string",
                            "title": "Database",
                            "description": "Database name"
                        },
                        "#username": {
                            "type": "string",
                            "title": "Username",
                            "format": "password"
                        },
                        "#password": {
                            "type": "string",
                            "title": "Password",
                            "format": "password"
                        },
                        "collection_name": {
                            "type": "string",
                            "title": "Collection Name",
                            "default": "keboola_embeddings"
                        }
                    }
                },
                "pinecone_settings": {
                    "type": "object",
                    "title": "Pinecone Settings",
                    "required": [
                        "#api_key",
                        "environment",
                        "index_name"
                    ],
                    "options": {
                        "dependencies": {
                            "db_type": "pinecone"
                        }
                    },
                    "properties": {
                        "#api_key": {
                            "type": "string",
                            "title": "API Key",
                            "format": "password"
                        },
                        "environment": {
                            "type": "string",
                            "title": "Environment",
                            "description": "Pinecone environment name"
                        },
                        "index_name": {
                            "type": "string",
                            "title": "Index Name"
                        }
                    }
                },
                "qdrant_settings": {
                    "type": "object",
                    "title": "Qdrant Settings",
                    "required": [
                        "url",
                        "#api_key"
                    ],
                    "options": {
                        "dependencies": {
                            "db_type": "qdrant"
                        }
                    },
                    "properties": {
                        "url": {
                            "type": "string",
                            "title": "URL",
                            "description": "Qdrant instance URL"
                        },
                        "#api_key": {
                            "type": "string",
                            "title": "API Key",
                            "format": "password"
                        }
                    }
                },
                "milvus_settings": {
                    "type": "object",
                    "title": "Milvus Settings",
                    "required": [
                        "host",
                        "port",
                        "#username",
                        "#password"
                    ],
                    "options": {
                        "dependencies": {
                            "db_type": "milvus"
                        }
                    },
                    "properties": {
                        "host": {
                            "type": "string",
                            "title": "Host",
                            "description": "Milvus server hostname"
                        },
                        "port": {
                            "type": "integer",
                            "title": "Port",
                            "default": 19530
                        },
                        "#username": {
                            "type": "string",
                            "title": "Username",
                            "format": "password"
                        },
                        "#password": {
                            "type": "string",
                            "title": "Password",
                            "format": "password"
                        }
                    }
                },
                "redis_settings": {
                    "type": "object",
                    "title": "Redis Settings",
                    "required": [
                        "host",
                        "port",
                        "#password"
                    ],
                    "options": {
                        "dependencies": {
                            "db_type": "redis"
                        }
                    },
                    "properties": {
                        "host": {
                            "type": "string",
                            "title": "Host",
                            "description": "Redis server hostname"
                        },
                        "port": {
                            "type": "integer",
                            "title": "Port",
                            "default": 6379
                        },
                        "#password": {
                            "type": "string",
                            "title": "Password",
                            "format": "password"
                        }
                    }
                },
                "opensearch_settings": {
                    "type": "object",
                    "title": "OpenSearch Settings",
                    "required": [
                        "host",
                        "port",
                        "#username",
                        "#password",
                        "index_name"
                    ],
                    "options": {
                        "dependencies": {
                            "db_type": "opensearch"
                        }
                    },
                    "properties": {
                        "host": {
                            "type": "string",
                            "title": "Host",
                            "description": "OpenSearch server hostname"
                        },
                        "port": {
                            "type": "integer",
                            "title": "Port",
                            "default": 9200
                        },
                        "#username": {
                            "type": "string",
                            "title": "Username",
                            "format": "password"
                        },
                        "#password": {
                            "type": "string",
                            "title": "Password",
                            "format": "password"
                        },
                        "index_name": {
                            "type": "string",
                            "title": "Index Name",
                            "default": "embeddings"
                        }
                    }
                },
                "test_connection": {
                    "type": "button",
                    "format": "sync-action",
                    "options": {
                        "async": {
                            "label": "Test Connection to Vector Store Database",
                            "action": "testVectorStoreConnection",
                            "cache": false
                        }
                    }
                }
            }
        },
        "advanced_options": {
            "type": "object",
            "title": "Advanced Options",
            "propertyOrder": 500,
            "properties": {
                "batch_size": {
                    "type": "integer",
                    "title": "Batch Size",
                    "description": "Number of texts to process in one batch",
                    "default": 100,
                    "minimum": 1,
                    "maximum": 1000,
                    "propertyOrder": 1
                },
                "enable_chunking": {
                    "type": "boolean",
                    "title": "Enable Text Chunking",
                    "description": "Split long texts into smaller chunks before embedding",
                    "default": false,
                    "propertyOrder": 2
                },
                "chunking_settings": {
                    "type": "object",
                    "title": "Chunking Settings",
                    "propertyOrder": 3,
                    "options": {
                        "dependencies": {
                            "enable_chunking": true
                        }
                    },
                    "properties": {
                        "chunk_size": {
                            "type": "integer",
                            "title": "Chunk Size",
                            "description": "Maximum number of characters in each chunk",
                            "default": 1000,
                            "minimum": 100,
                            "maximum": 8000
                        },
                        "chunk_overlap": {
                            "type": "integer",
                            "title": "Chunk Overlap",
                            "description": "Number of characters to overlap between chunks",
                            "default": 100,
                            "minimum": 0,
                            "maximum": 1000
                        },
                        "chunk_strategy": {
                            "type": "string",
                            "title": "Chunking Strategy",
                            "description": "How to split the text into chunks",
                            "enum": [
                                "character",
                                "sentence",
                                "word",
                                "paragraph"
                            ],
                            "default": "paragraph",
                            "options": {
                                "tooltip": "Paragraph is recommended for most use cases"
                            }
                        }
                    }
                }
            }
        }
    },
    "actions": {
        "testConnection": {
            "type": "button",
            "format": "test-connection",
            "label": "Test Vector DB Connection"
        }
    }
}